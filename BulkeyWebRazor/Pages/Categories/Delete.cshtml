@page
@model BulkeyWebRazor.Pages.Categories.DeleteModel
<h2 class="form-control text-primary text-center">Delete Category</h2>
<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <br />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3 p-1">
            <label asp-for="Category.name" class="pb-0"></label>
            <input asp-for="Category.name" class="form-control" />
            <span class="text-danger" asp-validation-for="Category.name"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Category.displayOder" class="pb-0"></label>
            <input asp-for="Category.displayOder" class="form-control" />
            <span class="text-danger" asp-validation-for="Category.displayOder"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary" asp-page="/Categories/Index">Back To List</a>
            </div>
        </div>
    </div>
</form>
@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
