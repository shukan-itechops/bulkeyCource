@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">@(Model.Id!=0?"Update":"Add") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 mb-5">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden/>
            <div class="row">
                <div class="col-12">
                    <div class="border p-3 mt-4">
                        <div class="row pb-2">
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-3 p-1">
                            <label asp-for="Name" class="pb-0"></label>
                            <input asp-for="Name" class="form-control" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="StreetAdrress" class="pb-0"></label>
                            <input asp-for="StreetAdrress" class="form-control" />
                            <span class="text-danger" asp-validation-for="StreetAdrress"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="City" class="pb-0"></label>
                            <input asp-for="City" class="form-control" />
                            <span class="text-danger" asp-validation-for="City"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="State" class="pb-0"></label>
                            <input asp-for="State" class="form-control" />
                            <span class="text-danger" asp-validation-for="State"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="PostalCode" class="pb-0"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span class="text-danger" asp-validation-for="PostalCode"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="PhoneNumber" class="pb-0"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary form-control">Create</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a class="btn btn-outline-secondary" asp-controller="Company" asp-action="Index">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>
@section scripts {
    
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}